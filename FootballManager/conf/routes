# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /fixtures                   controllers.Application.fixtures()
GET     /leagueTable                controllers.Application.leagueTable()
GET     /squad                      controllers.Application.squad()
GET     /login                      controllers.Application.login()
GET     /register                   controllers.Application.register()
# Update Player
GET     /updatePlayer/:id           controllers.PlayersDB.updatePlayer(id:Long)
# Process the update
POST /updateProductSubmit/:id       controllers.PlayersDB.updatePlayerSubmit(id:Long)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    